@page
@model Pizzeria.Pages.Forms.CustomPizzaModel

@*<a class="nav-link text-dark" asp-area="" asp-page="/Checkout/Checkout">Checkout</a>*@

<div class="text-center container">
    <h1>Create Your Own Pizza</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pb-5 pt-5 rounded bg-info col-4 text-light fw-bold">
        <input type="text" asp-for="Pizza.Name" placeholder="Pizza name.."/>
        <br />
        <input type="checkbox" asp-for="Pizza.TomatoSauce" /> Tomato Sauce
        <br />
        <input type="checkbox" asp-for="Pizza.Cheese" /> Cheese
        <br />
        <input type="checkbox" asp-for="Pizza.Peperoni" /> Peperoni
        <br />
        <input type="checkbox" asp-for="Pizza.Mushroom" /> Mushroom
        <br />
        <input type="checkbox" asp-for="Pizza.Tuna" /> Tuna
        <br />
        <input type="checkbox" asp-for="Pizza.Pineapple" /> Pineapple
        <br />
        <input type="checkbox" asp-for="Pizza.Ham" /> Ham
        <br />
        <input type="checkbox" asp-for="Pizza.Beef" /> Beef
        <br />

        <button class="btn btn-primary mt-1" type="submit">Order Pizza</button>
    </form>
</div>